@model BasketballWebApp.Models.UserTeamPlayers

@{
    ViewData["Title"] = "Create";
}

<style>
    * {
        background-size: cover;
        text-align: center;
    }
    .form-group{
        color:white;
    }
    h1{
        color:white;
    }
    .form-control{
        color:black;
    }
    a {
        color: white;
    }
</style>

<h1>Add Player to @ViewBag.UserTeamName</h1>

<hr />
    <div class="row justify-content-center">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group" style="font-size:larger">
                    Budget: @Html.Label("Budget", (string)ViewBag.Budget)
                </div>
                <div class="form-group" style="color:black"> 
                    <select asp-for="UserTeamId" class="form-control" asp-items="ViewBag.UserTeamId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="PlayerId" class="control-label">Player</label>
                    <select asp-for="PlayerId" class="form-control" asp-items="ViewBag.PlayerId"></select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Add Player" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>

<div>
    <a class="btn btn-light" asp-action="Index" asp-route-id="@ViewBag.UserTeamIdInt">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
