@model BasketballWebApp.Models.UserTeamPlayers

@{
    ViewData["Title"] = "Create";
}

<h1>Add Player to @ViewBag.UserTeamName</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
               Budget: @Html.Label("Budget", (string)ViewBag.Budget)
            </div>
            <div class="form-group">
                <select asp-for="UserTeamId" class="form-control" asp-items="ViewBag.UserTeamId"></select>
            </div>
            <div class="form-group">
                <label asp-for="PlayerId" class="control-label">Player</label>
                <select asp-for="PlayerId" class="form-control" asp-items="ViewBag.PlayerId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-id="@ViewBag.UserTeamIdInt">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
