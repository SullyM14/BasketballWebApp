@model BasketballWebApp.Models.UserTeamPlayers

@{
    ViewData["Title"] = "Delete";
}

<style>
    * {
        background-size: cover;
        text-align: center;
        color: white
    }
    a {
        color: white;
    }
</style>
<h3>Are you sure you want to delete this player from @ViewBag.UserTeamName</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Player)
        </dt>
        <dd class="col-sm-10">
            @ViewBag.PlayerName
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserTeam)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserTeam.TeamName)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="UserTeamId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
    <a class="btn btn-light" asp-action="Index" asp-route-id="@ViewBag.UserTeamIdInt">Back to List</a>
</div>
